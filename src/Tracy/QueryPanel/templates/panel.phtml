<?php
/** @var mixed[] $parameters */
/** @var object[] $queries */
/** @var int $queriesNum */

/** @var float $totalTime */
use Nettrine\DBAL\Utils\QueryUtils;
use Tracy\Dumper;
use Tracy\Helpers;

?>
<style>
	#tracy-debug td.tracy-dbal-sql {
		background: white !important
	}

	#tracy-debug .tracy-dbal-source {
		color: #999 !important
	}

	#tracy-debug .tracy-dbal tr table {
		margin: 8px 0;
		max-height: 150px;
		overflow: auto
	}
</style>

<?php if ($queriesNum === 0): ?>
	<h1>No queries</h1>
<?php else: ?>
	<h1>Queries:
		<?= $queriesNum ?>,
		time:
		<?= $totalTime ? sprintf('%0.3f', $totalTime * 1000) : ''; ?> ms
	</h1>
<?php endif; ?>

<div class="tracy-inner nettrine-dbal">
	<?php if ($queries !== []): ?>
		<table class="tracy-sortable">
			<tr>
				<th>Time</th>
				<th>SQL Statement</th>
			</tr>

			<?php foreach ($queries as $q): ?>
				<tr>
					<td>
						<?= sprintf('%0.2f', $q->duration * 1000); ?>&nbsp;ms
					</td>
					<td class="tracy-dbal-sql">
						<?= QueryUtils::highlight($q->sql); ?>
						<?php if (count($q->source) !== 0): ?>
							<?php foreach ($q->source as $s): ?>
								<br><?= Helpers::editorLink($s['file'], $s['line']); ?><br>
							<?php endforeach; ?>
						<?php endif; ?>
					</td>
				</tr>
			<?php endforeach; ?>

		</table>
	<?php endif; ?>

	<div style="margin-top: 2px;">
		<?= Dumper::toHtml($parameters, [Dumper::COLLAPSE => true]); ?>
	</div>
</div>
